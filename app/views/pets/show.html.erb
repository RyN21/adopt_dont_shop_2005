<a href='/pets'>Pet Index</a>

<h1>Name: <%= @pet.name %></h1>
<h1><img src='<%= @pet.image %>'></h1>
<p>Age: <%= @pet.age %></p>
<p>Sex: <%= @pet.sex %></p>
<p>Shelter: <%= @shelter.name %></p>
<p>Available for adoption: <%= @pet.adoptable? %></p>

<p><%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %></p>

<p><%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %></p>
